# Local Development Environment Variables
# This file is gitignored - safe for secrets

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OnPrez

# ============================================
# Database (Neon)
# ============================================
# Neon PostgreSQL Connections
DATABASE_URL="your_neon_pooled_connection_string_here"
DIRECT_URL="your_neon_direct_connection_string_here"
PREVIEW_DATABASE_URL="your_preview_pooled_connection_string_here"
PREVIEW_DIRECT_URL="your_preview_direct_connection_string_here"
DATABASE_ENV="preview"

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=7d
JWT_REFRESH_TOKEN_EXPIRY=30d

# Resend
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@onprez.com
FROM_NAME=OnPrez
APP_URL=https://onprez.vercel.app