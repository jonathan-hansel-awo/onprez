# ============================================
# OnPrez Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OnPrez

# ============================================
# Database (Supabase PostgreSQL)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/database
# Will be configured in Milestone 2

# Connection pooling (for Prisma)
DATABASE_URL=

# Direct connection (for migrations)
DIRECT_URL=

# ============================================
# Authentication (Supabase Auth)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# Will be configured in Milestone 3

NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# Email Service (Resend)
# ============================================
# Get your API key from: https://resend.com/api-keys
# Will be configured later

RESEND_API_KEY=

# ============================================
# Payment Processing (Stripe)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
# Will be configured later

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ============================================
# SMS Service (Twilio) - Optional
# ============================================
# Get these from: https://console.twilio.com
# For appointment reminders (future feature)

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# Analytics (Optional)
# ============================================

NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# ============================================
# Feature Flags
# ============================================

NEXT_PUBLIC_ENABLE_ANALYTICS=false